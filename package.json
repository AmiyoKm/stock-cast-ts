{
    "name": "ts_backend",
    "version": "1.0.0",
    "description": "TypeScript + Express + PostgreSQL backend",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node --env-file=.env dist/server.js",
        "dev": "node --experimental-transform-types --env-file=.env --watch-path=./src src/server.ts",
        "migrate:up": "node-pg-migrate -m src/db/migrations up",
        "migrate:down": "node-pg-migrate -m src/db/migrations down",
        "migrate:create": "node-pg-migrate -m src/db/migrations create"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-rate-limit": "^8.1.0",
        "joi": "^18.0.1",
        "jsonwebtoken": "^9.0.2",
        "node-pg-migrate": "^8.0.3",
        "nodemailer": "^7.0.10",
        "pg": "^8.16.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.4",
        "@types/joi": "^17.2.2",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.9.1",
        "@types/nodemailer": "^7.0.3",
        "@types/pg": "^8.15.5",
        "typescript": "^5.9.3"
    }
}
